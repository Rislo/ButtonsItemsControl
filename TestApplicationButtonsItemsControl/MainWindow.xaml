<Window x:Class="TestApplicationButtonsItemsControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:MyNamespace="clr-namespace:TestApplicationButtonsItemsControl"
        Title="MainWindow" Height="350" Width="525">
    <UniformGrid Columns="2">
        <StackPanel Orientation="Vertical">
        	<MyNamespace:ButtonsItemsControl x:Name="BLV1" Margin="5" HorizontalAlignment="Right" ItemsSource="{Binding Buttons}" Height="150" />
        	<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        		<Button Content="Add" Click="ButtonAdd_Click" Margin="5" />
        		<Button Content="Remove" Click="ButtonRemove_Click" Margin="5"/>
        	</StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <!--<MyNamespace:ButtonsItemsControl x:Name="BLV2" Margin="5" HorizontalAlignment="Right" ItemsSource="{Binding Buttons2}" Height="150" />-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Add" Click="ButtonAdd2_Click" Margin="5" />
                <Button Content="Remove" Click="ButtonRemove2_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </UniformGrid>
</Window>
